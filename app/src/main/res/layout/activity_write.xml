<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:padding="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="참견해주세요"
    android:layout_gravity="center"
    android:textSize="25dp"
    android:textColor="#CDE91E63"

    />

    <TextView
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성일"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="작성자 : "/>
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:id="@+id/writer"
            />


    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="제목"/>

                <EditText
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edge"
                    android:textSize="15dp"

                    android:id="@+id/titleText"
                    ></EditText>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:text="내용"/>

            <EditText
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:background="@drawable/edge"
                android:textSize="15dp"

                android:minLines="10"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:overScrollMode="always"

                android:id="@+id/contentsText"
                ></EditText>

        </LinearLayout>



    </LinearLayout>
    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/secretGroup"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공개"
            android:layout_weight="1"
            android:checked="true"
            android:id="@+id/open"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비공개"
            android:layout_weight="1"
            android:id="@+id/notopen"
            />

    </RadioGroup>



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "사진첨부"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/pictureCheck"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/pleaseFrameLayout"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <Button
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:background="@color/colorMain"
                android:id="@+id/btn_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진1"/>
            <Button
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:background="@color/colorMain"
                android:id="@+id/btn_album1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:text="사진2"/>

    </LinearLayout>

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_view"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/pic"

        />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/iv_view1"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/pic"
            />
    </LinearLayout>

    </FrameLayout>

    <Button

        android:background="@color/colorMain"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="작성 완료"
        android:id="@+id/completeBtn"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>

</ScrollView>