<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StyleFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:id="@+id/manLayout"
                android:layout_margin="10dp"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rkdnl"
                    android:scaleType="fitCenter"
                    android:id="@+id/cut_man"
                    />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vja"
                    android:scaleType="fitCenter"
                    android:id="@+id/pum_man"
                    android:layout_toRightOf="@+id/cut_man"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/duator"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@+id/pum_man"
                    android:id="@+id/color_man"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tmxkdlffld"
                    android:scaleType="fitCenter"
                    android:id="@+id/styiling_man"
                    android:layout_below="@+id/cut_man"
                    android:layout_marginLeft="50dp"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/zmfflslr"
                    android:id="@+id/clinic_man"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@+id/styiling_man"
                    android:layout_below="@+id/cut_man"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/man"
                    android:scaleType="fitCenter"
                    android:layout_below="@+id/styiling_man"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:id="@+id/wonmanLayout"
                android:visibility="invisible"
                android:layout_margin="10dp"

                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rkdnl"
                    android:scaleType="fitCenter"
                    android:id="@+id/cut_woman"
                    />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vja"
                    android:scaleType="fitCenter"
                    android:id="@+id/pum_woman"
                    android:layout_toRightOf="@+id/cut_woman"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/duator"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@+id/pum_woman"
                    android:id="@+id/color_woman"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tmxkdlffld"
                    android:scaleType="fitCenter"
                    android:id="@+id/styiling_woman"
                    android:layout_below="@+id/cut_woman"
                    android:layout_marginLeft="50dp"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/zmfflslr"
                    android:id="@+id/clinic_woman"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@+id/styiling_woman"
                    android:layout_below="@+id/cut_woman"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/woman"
                    android:scaleType="fitCenter"
                    android:layout_below="@+id/styiling_woman"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_weight="1"

            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/genderRadio"
                >

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="남자"
                    android:id="@+id/Man"
                    android:background="@color/colorMainDark"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:checked="true"
                    />
                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="여자"
                    android:id="@+id/Woman"
                    android:background="@color/colorMain"
                    android:gravity="center"
                    android:textSize="18dp"
                    />

            </RadioGroup>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>