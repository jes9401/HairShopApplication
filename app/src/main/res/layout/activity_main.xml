<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="헤어의 참견"
            android:id="@+id/text1"
            android:textSize="30dp"
            android:textColor="#CDE91E63"
            android:layout_centerHorizontal="true"/>


        <ImageButton
            android:id="@+id/helpButton"
            android:padding="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/questionmark_black"
            android:scaleType="fitCenter"
            android:background="@color/colorBack"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:text="5월의 참견"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:text="스타일"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/buttonPlease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:text="참견해주세요"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            />

        <Button

            android:id="@+id/buttonReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:text="후기"
            android:layout_weight="1"
            />
        </LinearLayout>



        <LinearLayout
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/fragment_conatiner"

            >


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#0DE91E63"
            android:scaleType="fitCenter"
            android:src="@drawable/home"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/mypageButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mypage"
            android:background="#0DE91E63"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/map_2"
            android:background="#0DE91E63"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>